                            Fill="black"
                            HorizontalOptions="Center"
                            VerticalOptions="Center">
                            <Path.GestureRecognizers>
                                <TapGestureRecognizer Command="{Binding LoginCommand}" />
                            </Path.GestureRecognizers>
                        </Path>


                    </Grid>
                </pancake:PancakeView>
            </ScrollView>
        </Grid>
    </ContentPage.Content>
</ContentPage>